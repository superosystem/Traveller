<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <queries>
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <category android:name="android.intent.category.BROWSABLE" />
            <data android:scheme="https" />
        </intent>
    </queries>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Traveller"
        tools:targetApi="31">
        <activity
            android:name=".ui.ocr.SuccessPageActivity"
            android:exported="false" />
        <activity
            android:name=".ui.ocr.OCRResultActivity"
            android:exported="false" />
        <activity
            android:name=".ui.ocr.OCRScreenActivity"
            android:exported="false" />
        <activity
            android:name=".ui.ocr.ManualInputActivity"
            android:exported="false" />
        <activity
            android:name=".ui.flightsearchresult.FlightSearchResultActivity"
            android:exported="false" />
        <activity
            android:name=".ui.main.historydetail.HistoryDetailActivity"
            android:exported="false" />
        <activity
            android:name=".ui.main.HomeActivityTwo"
            android:exported="false" />
        <activity
            android:name=".ui.main.HomeActivity"
            android:exported="false" />
        <activity
            android:name=".ui.eula.EulaActivity"
            android:exported="false" />
        <activity
            android:name=".ui.onboard.OnBoardingActivity"
            android:exported="false" />
        <activity
            android:name=".ui.auth.RegistrationActivity"
            android:exported="false" />
        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".ui.splashscreen.SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="org.superosystem.traveller"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/image_file_paths" />
        </provider>
    </application>

</manifest>