<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_scanning"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:contentDescription="@string/scanning_option"
        android:src="@drawable/onboarding_image1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/nunito_bold"
        android:gravity="center_horizontal"
        android:text="@string/scanning_alert"
        android:textColor="@color/customColorFont"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/iv_scanning"
        app:layout_constraintStart_toStartOf="@id/iv_scanning"
        app:layout_constraintTop_toBottomOf="@id/iv_scanning" />
</androidx.constraintlayout.widget.ConstraintLayout>