<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Traveller" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/customColorSecondary50</item>
        <item name="colorPrimaryVariant">@color/customColorSecondary90</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/customColorSecondary50</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.Traveller" parent="Base.Theme.Traveller" />

    <style name="MyAlertDialogTheme" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="colorPrimary">@color/customColorSecondary50</item>
        <item name="colorAccent">@color/customColorSecondary90</item>
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:windowBackground">@drawable/bg_dialog</item>
    </style>

    <style name="BottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/nunito_semi_bold</item>
        <item name="android:keyTextSize">14sp</item>
    </style>

    <declare-styleable name="ViewFinderBackground">
        <attr name="backgroundColor" format="color" />
    </declare-styleable>

</resources>